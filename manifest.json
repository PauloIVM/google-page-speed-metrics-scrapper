{
    "manifest_version": 2,
    "name": "Page-speed Metrics Tool",
    "description": "Tool to get main page-speed metrics",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_title": "Metrics Tool"
    },
    "content_scripts": [
        {
            "matches": [
            "<all_urls>"
            ],
            "js": [
            "getMetrics.js"
            ]
        }
    ]
}